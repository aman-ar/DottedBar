<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amanarora.dottedbar.MainActivity">

    <com.example.amanarora.dottedbar.DottedBar
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:id="@+id/dottedBar"
        app:dotSize="10dp"
        app:dotCount="5"
        app:dotSpace="10dp"
        app:expandedDotSize="15dp"
        android:onClick="viewTouched"
        android:layout_marginBottom="50sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide"
        android:id="@+id/hideButton"
        android:layout_below="@id/dottedBar"
        android:onClick="hideButtonClicked"
        android:layout_marginLeft="50sp"
        android:layout_alignParentLeft="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show"
        android:id="@+id/showButton"
        android:onClick="showButtonClicked"
        android:layout_below="@id/dottedBar"
        android:layout_marginRight="50sp"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>
